<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="provider-of-usercore" />
    
 	<!--zookeeper注册中心-->
    <dubbo:registry address="zookeeper://68.168.138.63:2181?backup=68.168.138.63:2182,68.168.138.63:2183" />

    <!-- 用dubbo协议定义暴露的port   -->
    <dubbo:protocol name="dubbo" port="30001" />
    
    <bean id="controlService" class="com.liu.usercore.control.impl.ControlServiceImpl"/>
    <!-- 暴露服务默认配置 -->
    <dubbo:provider id="controlServiceProvider" threadpool="fixed" threads="500" retries="0" timeout="60000" delay="-1"/> 
    <dubbo:service interface="com.liu.apidubbo.IControlService" ref="controlService" group="usercoreGroup" provider="controlServiceProvider"/>
</beans>